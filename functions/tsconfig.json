{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src/*.ts"],
  "exclude": ["../node_modules"]
}
